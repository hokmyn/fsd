extends ../main-layout/main-layout 

include ../../blocks/hero-galery/hero-galery 
include ../../blocks/additions/additions 
include ../../blocks/comment/comment 
include ../../blocks/bullet/bullet 
include ../../blocks/booking-card/booking-card 

block title
  title Room details

block content
  +hero-galery([
    "galery-primary.png",
    "galery-secondary-1.png",
    "galery-secondary-2.png"
  ])
  
  .room-details
    .room-details__grid
      .room-details__info
        .room-details__room-item
          h2.room-details__title Сведения о номере
          .room-details__inner
            +additions({
              title: "Комфорт",
              desc: "Шумопоглощающие стены",
              icon: "tag_faces"
            })
          .room-details__inner
            +additions({
              title: "Удобство",
              desc: "Окно в каждой из спален",
              icon: "location_city"
            })
          +additions({
            title: "Уют",
            desc: "Номер оснащен камином",
            icon: "whatshot",
            noBorder: true
          })
        .room-details__room-item
          h2.room-details__title Впечатления от номера
          .room-details__statistic-container
            .room-details__statistic
              div(class="donut statistic__donut js-donut" data-donut='[{"value": 65, "color": "#BC9CFF", "bold": true}, {"value": 65, "color": "#6FCF97"}, {"value": 130, "color": "#FFE39C"}]')

            .room-details__list
              ul.bullet
                li.bullet__element.bullet__element_yellow.bullet__element_compacted Великолепно
                li.bullet__element.bullet__element_blue.bullet__element_compacted Хорошо
                li.bullet__element.bullet__element_pink.bullet__element_compacted Удовлетворительно
                li.bullet__element.bullet__element_black.bullet__element_compacted Разачарован
        .room-details__room-comments
          h2.room-details__title Отзывы посетителей номера
          .room-details__inner
            +comment({
              image: "ava.jpg",
              author: "Мурад Сарафанов",
              date: "5 дней назад",
              like: { likes: 5, liked: true },
              text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."
            })
          +comment({
            image: "ava.jpg",
            author: "Патрисия Стёклышкова",
            date: "Неделю назад",
            like: { likes: 2, liked: false },
            text: "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент"
          })
        .room-details__room-item.room-details__room-item_bottom
          h2.room-details__title Правила
          +bullet([
            "Нельзя с питомцами",
            "Без вечеринок и мероприятий",
            "Время прибытия — после 13:00, а выезд до 12:00"
          ])
        .room-details__room-item.room-details__room-item_bottom
          h2.room-details__title Отмена
          p.room-details__text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
      .room-details__booking
        +booking-card()
