include ../../blocks/color/color

doctype html
html
  head
    title Colors & Type
    meta(name="viewport" content="width=device-width, initial-scale=1")
  body
    img.logo(src="../img/logo.svg", alt="logo")
    .wrapper
      .color-types
        .color-types__pallete
          .palette
            +color({title: "Dark Shade 100%", body: "#1F2041", theme: "100"})
            +color({title: "Dark Shade 75%", body: "#1F2041", theme: "75"})
            +color({title: "Dark Shade 50%", body: "#1F2041", theme: "50"})
            +color({title: "Dark Shade 25%", body: "#1F2041", theme: "25"})
            +color({title: "Dark Shade 5%", body: "#1F2041", theme: "5"})
            +color({title: "Purple", body: "#BC9CFF", theme: "main"})
            +color({title: "Green", body: "#6FCF97", theme: "accent"})
            
        .color-types__types
          .type
            .type__head.type__head--big H1
            .type__body
              h1.color-types__big This one is the sub-section or widget title
          .type
            .type__head.type__head--middle H2
            .type__body
              h2.color-types__middle 
                | Next one is the item title inside
                br
                | widgets
          .type
            .type__head.type__head--small H3
            .type__body
              h3.color-types__label This is a label or CTA text
          .type
            .type__head Body
            .type__body
              | This is the body text which is used for most of the design, 
              | like paragraphs, lists, etc.
