include ../calendar/calendar

mixin range-dates({inLabel, outLabel})
  .range-dates
    +calendar()
    label.range-dates__label.range-dates__label--width-small= inLabel
      span.range-dates__wrapper
        input.range-dates__date-dropdown(placeholder="ДД.ММ.ГГГГ")
    label.range-dates__label.range-dates__label--width-small= outLabel
      span.range-dates__wrapper
        input.range-dates__date-dropdown(placeholder="ДД.ММ.ГГГГ")


mixin date-dropdown({date, label})
  .range-dates
    label.range-dates__label= label
      span.range-dates__wrapper
        input.range-dates__date-dropdown(placeholder="ДД.ММ.ГГГГ" value=date)