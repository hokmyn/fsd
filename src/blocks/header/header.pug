include ../menu/menu

mixin header({isLogged, buttons: {enter = "", register = ""} = {}, menu})
  header.header
    .header__container
      .header__logo
        .site-logo
      .header__menu
        +menu(menu)
      if isLogged
        .header__account Cosmin Negoita
      else
        .header__enter-panel
          .header__enter-button
            button.rounded-button= enter
          .button= register
      button.header__enter-toggle.icon-button account_box
      button.header__menu-toggle.icon-button.js-menu-button menu