include ../menu/menu
include ../button/button
include ../icon-button/icon-button
include ../rounded-button/rounded-button
include ../site-logo/site-logo

mixin header({isLogged, buttons: {enter = "", register = ""} = {}, menu, username})
  header.header
    .header__container
      .header__logo
        +site-logo()
      .header__menu
        +menu(menu)
      if isLogged
        .header__account= username
      else
        .header__enter-panel
          .header__enter-button
            +rounded-button({text: enter})
          +button({text: register})
      .header__enter-toggle
        +icon-button({icon: "account_box"})
