include ../price/price 
include ../apartment-info/apartment-info 
include ../range-dates/range-dates 
include ../invoice/invoice 
include ../long-button/long-button

mixin booking-card()
  .booking-card
    .card-canvas
      form.booking-card-form(action="index.html", method="post")
        .booking-card__header
          +apartment-info({number: 888, lux: true, big: true})
          +price("9 990")
        .booking-card__item.booking-card__item--up
          +range-dates({
            firstLabel: "Въезд",
            secondLabel: "Выезд",
          })
          .calendar
            input(type="text")
        .booking-card__item.booking-card__item--middle
          input.js-dropdown-booking
        .booking-card__item 
          +invoice()
        .booking-card__item--last 
          +long-button("Забронировать")