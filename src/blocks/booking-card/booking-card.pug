include ../price/price 
include ../apartment-info/apartment-info 
include ../range-dates/range-dates 
include ../invoice/invoice 
include ../long-button/long-button

mixin booking-card()
  .booking-card
    form.booking-card-form(action="/mock-address", method="post")
      .booking-card__header
        +apartment-info({number: 888, lux: true, big: true})
        +price("9 990")
      .booking-card__item.booking-card__item--index-hight
        +range-dates({
          inLabel: "Прибытие",
          outLabel: "Выезд",
        })
        .calendar
          input(type="text")
      .booking-card__item.booking-card__item--index-low
        h3.booking-card__subtitle Гости
        input.js-dropdown-booking
      .booking-card__item 
        +invoice()
      .booking-card__item
        +long-button("Забронировать")