mixin pagination()
  .pagination
    a.pagination__item.pagination__item--active(href="#") 1
    a.pagination__item(href="#") 2
    a.pagination__item(href="#") 3
    .pagination__item ...
    a.pagination__item(href="#") 15
    button.pagination__next
    .pagination__info 1 &ndash; 12 из 100+ вариантов аренды