include ../radio/radio
include ../toggle/toggle
include ../long-button/long-button
include ../card-footer/card-footer

mixin register-card()
  .register-card
    .card-canvas
      h1 Регистрация аккаунта
      form.register-card-form(action="/mock-address", method="post")
        .register-card__block
          .register-card__item
            input.text-field(placeholder="Имя")
          .register-card__item
            input.text-field(placeholder="Фамилия")
          +radio({ label: "Мужчина", name: "gender", checked: true })
          +radio({ label: "Женщина", name: "gender"})
        .register-card__block
          h3.register-card__label Дата рождения
          input.text-field(placeholder="ДД.ММ.ГГГГ").js-masked
        .register-card__block
          h3.register-card__label Данные для входа в сервис
          .register-card__item
            input.text-field(placeholder="Email")
          .register-card__item
            input.text-field(placeholder="Пароль")
          +toggle("Получать спецпредложения")
        .register-card__block
          +long-button("Перейти к оплате")
      .register-card__block.register-card__block--last
        +card-footer("Уже есть аккаунт на Toxin", "Войти")