mixin type({title, text, size})
  .type
    if size == "large"
      .type__head.type__head--font-large= title
      .type__body
        h1.type__text.type__text--font-large!= text
    else if size == "medium"
      .type__head.type__head--font-medium= title
      .type__body
        h2.type__text.type__text--font-medium!= text 
    else if size == "small"
      .type__head.type__head--font-small= title
      .type__body
        h3.type__text.type__text--font-small!= text
    else
      .type__head= title
      .type__body
        .type__text.type__text--font-default!= text
